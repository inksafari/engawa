---
import { getEntry } from 'astro:content'
import PageLayout from '../layouts/PageLayout.astro'
import EmailDisplay from '../components/emailDisplay.svelte'

const entry = await getEntry('pages', 'colophon')
const { Content } = await entry.render()
const pageInfo = {
  title: entry.data.title,
}
---

<PageLayout {pageInfo}>
  <Content />
  <!-- https://docs.astro.build/en/reference/directives-reference/#client-directives -->
  <EmailDisplay client:only='svelte' />
</PageLayout>
