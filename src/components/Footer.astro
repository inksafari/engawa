---
import NavigationLink from '../components/NavigationLink.astro'
import { removeTrailingSlash } from '../utilities/getPermaLink.js'
import siteInfo, { feedUrls } from '../consts.ts'
import Year from './Year.svelte'

const searchPageRoute = 'search'
const searchPagePath = new URL(searchPageRoute, siteInfo.siteBase)
const searchPageUrl = removeTrailingSlash(searchPagePath)
---

<footer class='site-foot row' itemscope itemtype='https://schema.org/WPFooter'>
  <div class='legel col c-12'>
    <NavigationLink href='/now'>now</NavigationLink>
    <NavigationLink href='/colophon'>colophon</NavigationLink>
    <NavigationLink href={feedUrls.page}>feed</NavigationLink>
    <NavigationLink href={searchPageUrl}>search</NavigationLink>
    <!-- Â© 2023-2024 example.com -->
    <div itemprop='copyrightNotice'>
      <span class='copy'>&copy;</span>
      <span class='year' itemprop='copyrightYear'>
        <Year from={siteInfo.copyrightYear} />
      </span>
      &nbsp;
      <a
        href='/'
        class='footer-link'
        itemprop='url'
        rel='author'
        data-testid='link'
      >
        <span translate='no' class='p-author h-card' itemprop='copyrightHolder'>
          {siteInfo.domain}
        </span>
      </a>
    </div><!-- /copyrightNotice -->
  </div><!-- /legel -->
</footer>
