---
import '../styles/layout_page.js'
import BaseHead from '../components/BaseHead.astro'
import Hant from '../components/Hant.astro'
import Footer from '../components/Footer.astro'
import siteInfo from '../consts.ts'
const { pageInfo } = Astro.props
---

<!doctype html>
<html
  dir='ltr'
  lang={siteInfo.langFull}
  class='han-init'
  prefix='og: https://ogp.me/ns# website: https://ogp.me/ns/website# rdfs: http://www.w3.org/2000/01/rdf-schema#'
>
  <head>
    <BaseHead {pageInfo} />
    <meta name='robots' content='noindex, noimageindex, nofollow, noarchive, noai, noimageai' />
    <slot name='meta' />
  </head>
  <body
    itemscope
    itemtype='https://schema.org/WebPage https://schema.org/CollectionPage'
  >
    <main id='main-content'>
      <article class='h-entry'>
        <section class='page-header'>
          <h1 class='page-title p-name' itemprop='headline name'>
            <span class='page-title-text'>{pageInfo.title}</span>
          </h1>
        </section>
        <div class='markdown page-content e-content' itemprop='text'>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
    <Hant />
    <slot name='footer' />
  </body>
</html>
