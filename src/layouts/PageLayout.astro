---
import { Head } from 'astro-capo'
import BaseHead from '../components/BaseHead.astro'
import Footer from '../components/Footer.astro'
// import Hant from '../components/Hant.astro'
import siteInfo from '../consts.ts'
import '../styles/layout_page.js'
const { pageInfo } = Astro.props
---

<!doctype html>
<html
  dir='ltr'
  lang={siteInfo.langFull}
  class='han-init'
  prefix='og: https://ogp.me/ns# website: https://ogp.me/ns/website# rdfs: http://www.w3.org/2000/01/rdf-schema#'
>
  <Head>
    <BaseHead {pageInfo} />
    <meta
      name='robots'
      content='noindex, noimageindex, nofollow, noarchive, noai, noimageai'
    />
    <slot name='meta' />
  </Head>
  <body
    itemscope
    itemtype='https://schema.org/WebPage https://schema.org/CollectionPage'
  >
    <div class='container'>
      <main id='main-content' class='row'>
        <article class='h-entry col c-12'>
          <section class='page-header'>
            <h1
              class='page-title p-name'
              itemprop='headline name'
              data-testid='heading'
            >
              {pageInfo.title}
            </h1>
          </section>
          <div class='markdown page-content e-content' itemprop='text'>
            <slot />
          </div>
        </article>
      </main>
      <Footer />
    </div>
    <!-- <Hant /> or <Heti /> -->
    <slot name='footer' />
  </body>
</html>
