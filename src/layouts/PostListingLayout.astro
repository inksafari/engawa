---
import '../styles/layout_list.js'
import BaseHead from '~/components/BaseHead.astro'
import Hant from '~/components/Hant.astro'
import Header from '~/components/Header.astro'
import Footer from '~/components/Footer.astro'
import { siteOwner, SITE_TITLE, HTM_LANG } from '~/consts'

const { currentPage } = Astro.props
---

<!doctype html>
<html
  dir='ltr'
  lang={HTM_LANG}
  class='han-init'
  prefix='og: https://ogp.me/ns# website: https://ogp.me/ns/website# rdfs: http://www.w3.org/2000/01/rdf-schema#'
>
  <head>
    <BaseHead {...Astro.props} />
    <slot name='meta' />
  </head>
  <body
    class='h-feed'
    itemscope
    itemtype='https://schema.org/WebPage https://schema.org/CollectionPage'
  >
    <Header />
    <main id='main-content'>
      <slot />
    </main>
    <Footer />
    <Hant />
  </body>
</html>
