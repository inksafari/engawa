---
import '../styles/layout_list.js'
import BaseHead from '../components/BaseHead.astro'
import Hant from '../components/Hant.astro'
import Footer from '../components/Footer.astro'
import siteInfo from '../consts.ts'

const { pageInfo, currentPage } = Astro.props
---

<!doctype html>
<html
  dir='ltr'
  lang={siteInfo.langFull}
  class='han-init'
  prefix='og: https://ogp.me/ns# website: https://ogp.me/ns/website# rdfs: http://www.w3.org/2000/01/rdf-schema#'
>
  <head>
    <BaseHead {pageInfo} />
    <slot name='meta' />
  </head>
  <body
    class='h-feed'
    itemscope
    itemtype='https://schema.org/WebPage https://schema.org/CollectionPage'
  >
    <main id='main-content'>
      <div class='container'>
        <slot />
      </div>
    </main>
    <Footer />
    <Hant />
  </body>
</html>
