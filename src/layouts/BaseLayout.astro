---
import '../styles/layout_base.js'
import BaseHead from '~/components/BaseHead.astro'
import Hant from '~/components/Hant.astro'
import Header from '~/components/Header.astro'
import Footer from '~/components/Footer.astro'
import { HTM_LANG, SITE_DESCRIPTION } from '~/consts'
// interface Props {
// meta: SiteMeta;
// }
const {
  meta: { title, description = SITE_DESCRIPTION },
} = Astro.props
---

<!doctype html>
<html
  dir='ltr'
  lang={HTM_LANG}
  class='han-init'
  prefix='og: https://ogp.me/ns# website: https://ogp.me/ns/website# rdfs: http://www.w3.org/2000/01/rdf-schema#'
>
  <head>
    <BaseHead title={title} description={description} />
    <slot name='meta' />
  </head>
  <body>
    <Header />
    <main id='main-content'>
      <header class='page-header'>
        <h1 class='page-title'>
          <span class='page-title-text'>{Astro.props.title}</span>
        </h1>
      </header>
      <slot />
    </main>
    <Footer />
    <Hant />
    <slot name='footer' />
  </body><!--範例：
<BaseLayout>
  <script src='/assets/exmaple.js' type='text/javascript' slot='meta' ></script>
</BaseLayout>
-->
</html>
