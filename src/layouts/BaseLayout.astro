---
import '../styles/layout_base.js';
import BaseHead from '~/components/BaseHead.astro';
import Hant from '~/components/Hant.astro';
import Bar from '~/components/Bar.astro';
import Footer from '~/components/Footer.astro';
import { HTM_LANG, RSS_LANG } from '~/consts';
---

<!doctype html>
<html
  dir='ltr'
  lang={HTM_LANG}
  class='han-init'
  prefix='og: https://ogp.me/ns# website: https://ogp.me/ns/website# rdfs: http://www.w3.org/2000/01/rdf-schema#'
>
  <head>
    <BaseHead {...Astro.props} />
    <slot name='meta' />
  </head>
  <body>
    <Bar />
    <div id='wrapper'>
      <header class='site-header'>
        <nav>
          <h1>
            <!-- &#8617;&nbsp; -->
            <a href='/' rel='home'
              >return to /home</a
            >
          </h1>
        </nav>
      </header>
      <div>
        <header class='page-header'>
          <h1 class='page-title'>
            <span class='page-title-text'>{Astro.props.title}</span>
          </h1>
        </header>
        <slot />
      </div>
      <Footer />
    </div>
    <Hant />
    <slot name='footer' />
  </body>
</html>
