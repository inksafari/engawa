{
  "name": "@inksafari/engawa",
  "description": "Personal blog built with Astro and svelte components.",
  "version": "0.0.0-development",
  "private": true,
  "homepage": "https://github.com/inksafari/engawa",
  "scripts": {
    "postinstall": "astro telemetry disable",
    "===== development =====": "",
    "new": "bun --bun ./scripts/new.mjs",
    "mod": "bun --bun ./scripts/get-updatetime.mjs",
    "clear": "bun --bun ./scripts/clear.mjs",
    "dev": "astro dev --config astro.config.dev.mjs",
    "===== linting & formatting =====": "",
    "code:diff": "git diff --exit-code > node_modules/.cache/temp.diff",
    "code:prettier": "prettier --write **/*.{css,cjs,mjs,js,ts,md,mdx,json,astro,svelte} --ignore-path .prettierignore --log-level warn --cache --cache-strategy content --cache-location node_modules/.cache/.prettiercache",
    "fmt": "run-s code:prettier",
    "find:keys": "gitleaks detect --source . -v",
    "lint": "lefthook run lint",
    "css:lint": "stylelint 'src/**/*.css' --config .stylelint.config.mjs --formatter string --output-file node_modules/.cache/css_report.txt",
    "css:fix": "stylelint 'src/**/*.css' --config .stylelint.config.mjs --allow-empty-input --cache --cache-strategy content --cache-location node_modules/.cache/.stylelintcache --fix",
    "js:lint": "eslint **/*.{js,cjs,mjs,ts,astro,svelte} --config eslint.config.js --cache --cache-strategy content --cache-location node_modules/.cache/.eslintcache --format html --output-file node_modules/.cache/js_report.html",
    "js:fix": "eslint **/*.{js,cjs,mjs,ts,astro,svelte} --config eslint.config.js --cache --cache-strategy content --cache-location node_modules/.cache/.eslintcache --fix",
    "text:redpen": "vale sync; vale src/content/**/*.mdx",
    "commit:lint": "commitlint --from HEAD~1 --to HEAD --verbose",
    "===== testing =====": "",
    "lh": "pnpx unlighthouse-puppeteer --site http://localhost:8081",
    "perf": "start-server-and-test 'pnpm serve' http://localhost:8081 'pnpm lh'",
    "test:unit": "vitest run",
    "test:unit:clean": "vitest clean cache",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "start-server-and-test 'pnpm dev' http://localhost:8081 'pnpm test:playwright' 'pnpm test:playwright:report'",
    "test:playwright": "playwright test",
    "test:playwright:report": "playwright show-report",
    "===== building =====": "",
    "cjk": "sh ./fontSubset.sh",
    "prebuild": "run-p cjk",
    "build:dev": "MODE=dev astro build",
    "build:prod": "MODE=production astro build",
    "build:search": "pagefind --site dist",
    "preview": "astro preview",
    "serve": "run-s build:dev preview",
    "ss:prod": "run-s build:prod preview",
    "===== deployment =====": "",
    "staging": "run-s build:prod staging:local",
    "staging:local": "firebase emulators:start",
    "staging:remote": "firebase hosting:channel:deploy yan --expires 10m",
    "deploy:firebase": "firebase deploy --only hosting",
    "deploy:hosting": "sh ./scripts/deploy.sh",
    "deploy": "run-s prebuild build:prod build:search deploy:hosting"
  },
  "dependencies": {
    "@astrojs/mdx": "^2.2.4",
    "@astrojs/svelte": "^5.3.0",
    "@expressive-code/plugin-collapsible-sections": "^0.33.5",
    "@expressive-code/plugin-line-numbers": "^0.33.5",
    "@extractus/oembed-extractor": "^4.0.3",
    "@fec/remark-a11y-emoji": "^4.0.2",
    "@pagefind/default-ui": "^1.1.0",
    "@playform/compress": "^0.0.3",
    "astro": "^4.5.16",
    "budoux": "^0.6.2",
    "defu": "^6.1.4",
    "fontaine": "^0.5.0",
    "hast-util-select": "^6.0.2",
    "hastscript": "^9.0.0",
    "lightningcss": "^1.24.1",
    "limax": "^4.1.0",
    "lunarphase-js": "^2.0.3",
    "mdast-util-to-hast": "^13.1.0",
    "mdast-util-to-string": "^4.0.0",
    "pagefind": "^1.1.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.0.0",
    "rehype-color-chips": "^0.1.3",
    "rehype-katex": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-directive": "^3.0.0",
    "remark-emoji": "^4.0.1",
    "remark-expressive-code": "^0.33.5",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "sanitize-html": "^2.13.0",
    "sirv": "^2.0.4",
    "spacetime": "^7.6.0",
    "svelte": "^4.2.12",
    "unified": "^11.0.4",
    "uniqolor": "^1.1.1",
    "unist-builder": "^4.0.0",
    "unist-util-is": "^6.0.0",
    "unist-util-visit": "^5.0.0",
    "xast-util-feed": "^2.0.0",
    "xast-util-to-xml": "^4.0.0",
    "xastscript": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@eslint/js": "^8.57.0",
    "@playwright/test": "^1.43.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@types/eslint": "^8.56.7",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitest/coverage-v8": "^1.4.0",
    "astro-eslint-parser": "^0.16.3",
    "browserslist": "^4.23.0",
    "browserslist-config-wikimedia": "^0.6.1",
    "bun-types": "^1.1.2",
    "dedent": "^1.5.1",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^0.33.1",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-perfectionist": "^2.8.0",
    "eslint-plugin-sonarjs": "^0.25.1",
    "eslint-plugin-svelte": "^2.35.1",
    "eslint-plugin-xss": "^0.1.12",
    "globals": "^15.0.0",
    "html-validate": "^8.18.1",
    "jsdom": "^24.0.0",
    "lefthook": "^1.6.8",
    "markuplint": "^4.5.0",
    "nolyfill": "^1.0.30",
    "npm-run-all": "^4.1.5",
    "ora": "^8.0.1",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-svelte": "^3.2.2",
    "start-server-and-test": "^2.0.3",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "36.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-declaration-strict-value": "^1.10.4",
    "stylelint-no-unsupported-browser-features": "^8.0.1",
    "stylelint-plugin-defensive-css": "^1.0.3",
    "stylelint-value-no-unknown-custom-properties": "^6.0.1",
    "svelte-eslint-parser": "^0.33.1",
    "tslib": "^2.6.2",
    "typescript": "5.4.4",
    "vite": "^5.2.8",
    "vitest": "^1.4.0",
    "xo": "^0.58.0"
  },
  "type": "module",
  "browserslist": [
    "extends browserslist-config-wikimedia/modern"
  ],
  "engines": {
    "node": ">=18.14.1"
  },
  "pnpm": {
    "overrides": {
      "array-includes": "npm:@nolyfill/array-includes@latest",
      "array.prototype.flat": "npm:@nolyfill/array.prototype.flat@latest",
      "array.prototype.flatmap": "npm:@nolyfill/array.prototype.flatmap@latest",
      "has": "npm:@nolyfill/has@latest",
      "object.assign": "npm:@nolyfill/object.assign@latest",
      "object.entries": "npm:@nolyfill/object.entries@latest",
      "object.fromentries": "npm:@nolyfill/object.fromentries@latest",
      "object.values": "npm:@nolyfill/object.values@latest",
      "sharp": "^0.33.0",
      "string.prototype.padend": "npm:@nolyfill/string.prototype.padend@latest"
    }
  }
}
