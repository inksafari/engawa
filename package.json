{
  "name": "@inksafari/engawa",
  "description": "Personal blog built with Astro and svelte components.",
  "version": "0.0.0-development",
  "private": true,
  "homepage": "https://github.com/inksafari/engawa",
  "scripts": {
    "postinstall": "astro telemetry disable",
    "===== development =====": "",
    "new": "deno run --allow-read --allow-write scripts/new.mjs",
    "mod": "node scripts/get-updatetime.mjs",
    "clear": "node scripts/clear.mjs",
    "dev": "astro dev",
    "===== linting & formatting =====": "",
    "code:diff": "git diff --exit-code > node_modules/.cache/temp.diff",
    "code:prettier": "prettier --write **/*.{css,cjs,mjs,js,ts,md,mdx,json,astro,svelte} --ignore-path .prettierignore --log-level warn --cache --cache-strategy content --cache-location node_modules/.cache/.prettiercache",
    "fmt": "run-s code:prettier",
    "find:keys": "gitleaks detect --source . -v",
    "lint": "lefthook run lint",
    "css:lint": "stylelint 'src/**/*.css' --config .stylelint.config.mjs --formatter string > .cache/css_report.txt",
    "css:fix": "stylelint 'src/**/*.css' --config .stylelint.config.mjs --allow-empty-input --cache --cache-strategy content --cache-location node_modules/.cache/.stylelintcache --fix",
    "js:lint": "eslint **/*.{js,cjs,mjs,ts,astro,svelte} --config eslint.config.js --cache --cache-strategy content --cache-location node_modules/.cache/.eslintcache --format html --output-file .cache/js_report.html",
    "js:fix": "eslint **/*.{js,cjs,mjs,ts,astro,svelte} --config eslint.config.js --cache --cache-strategy content --cache-location node_modules/.cache/.eslintcache --fix",
    "text:redpen": "vale sync; vale src/content/**/*.mdx",
    "commit:lint": "commitlint --from HEAD~1 --to HEAD --verbose",
    "===== testing =====": "",
    "lh": "pnpx unlighthouse-puppeteer --site http://localhost:8081",
    "perf": "start-server-and-test 'pnpm serve' http://localhost:8081 'pnpm lh'",
    "test:unit": "vitest run",
    "test:unit:clean": "vitest clean cache",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "start-server-and-test 'pnpm dev' http://localhost:8081 'pnpm test:playwright' 'pnpm test:playwright:report'",
    "test:playwright": "playwright test",
    "test:playwright:report": "playwright show-report",
    "===== building =====": "",
    "cjk": "sh ./fontSubset.sh",
    "build": "MODE=dev astro build",
    "build:prod": "MODE=production astro build",
    "build:search": "pagefind --site dist",
    "preview": "deno run --allow-net=:8081 --allow-read --allow-env ./main.js",
    "preview:deno": "deno run --allow-net=:8081 --allow-read --allow-env ./dist/server/entry.mjs",
    "serve": "run-s build preview",
    "ss:prod": "run-s build:prod build:search preview",
    "===== deployment =====": "",
    "staging": "run-s build:prod build:search staging:local",
    "staging:local": "firebase emulators:start",
    "staging:remote": "firebase hosting:channel:deploy yan --expires 10m",
    "deploy:firebase": "firebase deploy --only hosting",
    "deploy:hosting": "sh ./scripts/deploy.sh",
    "deploy": "run-s cjk build:prod build:search deploy:hosting"
  },
  "dependencies": {
    "@astrojs/mdx": "^2.0.3",
    "@astrojs/svelte": "^5.0.3",
    "@extractus/oembed-extractor": "^4.0.1",
    "@microflash/preset": "^1.0.3",
    "@microflash/rehype-figure": "^2.0.0",
    "@microflash/rehype-slugify": "^1.0.0",
    "@microflash/remark-callout-directives": "^2.0.0",
    "@pagefind/default-ui": "^1.0.4",
    "astro": "^4.0.7",
    "astro-compress": "^2.2.5",
    "defu": "^6.1.3",
    "fontaine": "^0.4.1",
    "hast-util-select": "^6.0.2",
    "hastscript": "^8.0.0",
    "html-entities": "^2.4.0",
    "limax": "^4.1.0",
    "lunarphase-js": "^2.0.1",
    "mdast-util-to-hast": "^13.0.2",
    "mdast-util-to-string": "^4.0.0",
    "pagefind": "^1.0.4",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-directive": "^3.0.0",
    "remark-expressive-code": "^0.30.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "sanitize-html": "^2.11.0",
    "spacetime": "^7.5.0",
    "svelte": "^4.2.8",
    "unified": "^11.0.4",
    "uniqolor": "^1.1.1",
    "unist-util-is": "^6.0.0",
    "unist-util-visit": "^5.0.0",
    "xast-util-feed": "^2.0.0",
    "xast-util-to-xml": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@double-great/stylelint-a11y": "^2.0.2",
    "@eslint/js": "^8.56.0",
    "@playwright/test": "^1.40.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@types/eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitejs/plugin-basic-ssl": "^1.0.2",
    "@vitest/coverage-v8": "^1.1.0",
    "@wordpress/browserslist-config": "^5.31.0",
    "astro-eslint-parser": "^0.16.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.0",
    "eslint-plugin-no-unsanitized": "^4.0.2",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-perfectionist": "^2.5.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-svelte": "^2.35.1",
    "eslint-plugin-xss": "^0.1.12",
    "globals": "^13.24.0",
    "jsdom": "^23.0.1",
    "lefthook": "^1.5.5",
    "nolyfill": "^1.0.27",
    "npm-run-all": "^4.1.5",
    "outdent": "^0.8.0",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.3",
    "prettier-plugin-svelte": "^3.1.2",
    "puppeteer": "^21.6.1",
    "start-server-and-test": "^2.0.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "34.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-declaration-strict-value": "^1.9.2",
    "stylelint-no-unsupported-browser-features": "^7.0.0",
    "stylelint-plugin-defensive-css": "^1.0.0",
    "stylelint-value-no-unknown-custom-properties": "^5.0.0",
    "svelte-eslint-parser": "^0.33.1",
    "tslib": "^2.6.2",
    "typescript": "5.3.3",
    "unlighthouse-puppeteer": "^0.10.4",
    "vite": "^5.0.10",
    "vitest": "^1.1.0",
    "vnu-jar": "^23.4.11",
    "xo": "^0.56.0"
  },
  "type": "module",
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "engines": {
    "node": ">=18.14.1"
  },
  "pnpm": {
    "overrides": {
      "array-includes": "npm:@nolyfill/array-includes@latest",
      "array.prototype.flat": "npm:@nolyfill/array.prototype.flat@latest",
      "array.prototype.flatmap": "npm:@nolyfill/array.prototype.flatmap@latest",
      "has": "npm:@nolyfill/has@latest",
      "object.assign": "npm:@nolyfill/object.assign@latest",
      "object.entries": "npm:@nolyfill/object.entries@latest",
      "object.fromentries": "npm:@nolyfill/object.fromentries@latest",
      "object.values": "npm:@nolyfill/object.values@latest",
      "sharp": "^0.33.0",
      "string.prototype.padend": "npm:@nolyfill/string.prototype.padend@latest"
    }
  }
}
