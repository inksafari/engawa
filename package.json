{
  "name": "@inksafari/engawa",
  "description": "Personal blog built with Astro.",
  "version": "0.0.0-development",
  "private": true,
  "homepage": "https://github.com/inksafari/engawa",
  "scripts": {
    "===== development =====": "",
    "new": "node scripts/new.cjs",
    "clear": "node scripts/clear.mjs",
    "dev": "astro dev",
    "===== linting & formatting =====": "",
    "fmt": "prettier --write . --ignore-path .gitignore --log-level warn --cache --cache-strategy content --cache-location .cache/.prettiercache",
    "commitlint": "npx commitlint --from HEAD~1 --to HEAD --verbose",
    "textlint": "textlint src/content/**/*.mdx",
    "===== testing =====": "",
    "===== building =====": "",
    "cjk": "sh ./fontSubset.sh",
    "build": "MODE=production astro build",
    "pagefind": "pagefind --source dist/",
    "preview": "deno run --allow-net=:8081 --allow-read --allow-env ./main.js",
    "preview:deno": "deno run --allow-net=:8081 --allow-read --allow-env ./dist/server/entry.mjs",
    "serve": "run-s build pagefind preview",
    "===== deployment =====": "",
    "deploy:hosting": "sh ./scripts/deploy.sh",
    "deploy": "run-s cjk build pagefind deploy:hosting"
  },
  "dependencies": {
    "@astrojs/deno": "^4.3.0",
    "@astrojs/image": "^0.17.3",
    "@astrojs/mdx": "^0.19.7",
    "@astrojs/prefetch": "^0.3.0",
    "@astrojs/svelte": "^3.1.0",
    "astro": "^2.10.6",
    "astro-compress": "^2.0.5",
    "astro-expressive-code": "^0.21.0",
    "date-fns": "^2.30.0",
    "feed": "^4.2.2",
    "mdast-util-to-hast": "^13.0.1",
    "mdast-util-to-string": "^4.0.0",
    "open-props": "^1.5.11",
    "pagefind": "^0.12.0",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.32.4",
    "svelte": "^4.2.0",
    "unist-util-is": "^6.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@playwright/test": "^1.37.0",
    "@proofdict/textlint-rule-proofdict": "^3.1.2",
    "@textlint/textlint-plugin-markdown": "^13.3.3",
    "@types/eslint": "^8.44.2",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vitest/coverage-v8": "^0.34.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-formatter-pretty": "^5.0.0",
    "eslint-plugin-astro": "^0.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-markdownlint": "^0.4.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-solid": "^0.12.1",
    "eslint-plugin-sonarjs": "^0.20.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "outdent": "^0.8.0",
    "postcss-jit-props": "^1.0.13",
    "postcss-preset-env": "^9.1.1",
    "prettier": "^3.0.1",
    "prettier-plugin-astro": "^0.11.0",
    "prettier-plugin-svelte": "^3.0.3",
    "start-server-and-test": "^2.0.0",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-no-unsupported-browser-features": "^7.0.0",
    "stylelint-plugin-defensive-css": "^0.8.1",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0",
    "textlint": "^13.3.3",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-ja-spacing": "^2.3.0",
    "textlint-rule-preset-ja-technical-writing": "^8.0.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  },
  "type": "module",
  "browserslist": [
    "cover 80% in alt-AS",
    "maintained node versions",
    "Firefox ESR",
    "not dead",
    "iOS >= 13"
  ],
  "prettier": {
    "singleQuote": false,
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      },
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  }
}
